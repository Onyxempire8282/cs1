    <!-- JavaScript for Interactivity -->
    <script>
        // Demo countdown timer
        function updateDemoCountdown() {
            const countdownEl = document.getElementById('demo-countdown');
            if (countdownEl) {
                // Simulate countdown
                const now = new Date();
                const expiry = new Date(now.getTime() + (6 * 24 + 14) * 60 * 60 * 1000); // 6 days, 14 hours
                const diff = expiry - now;
                
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                
                countdownEl.textContent = `${days} days, ${hours} hours remaining`;
            }
        }

        // Navigation handling
        function showView(viewId) {
            // Hide all views
            document.querySelectorAll('.view').forEach(view => {
                view.style.display = 'none';
            });
            
            // Show selected view
            const targetView = document.getElementById(viewId + '-view');
            if (targetView) {
                targetView.style.display = 'block';
                targetView.classList.add('fade-in');
            }

            // Update active nav link
            document.querySelectorAll('.sidebar__nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            const activeLink = document.querySelector(`[href="#${viewId}"]`);
            if (activeLink) {
                activeLink.classList.add('active');
            }
        }

        // Route tab switching
        function switchRouteTab(tabIndex) {
            document.querySelectorAll('.route-tab').forEach((tab, index) => {
                tab.classList.toggle('active', index === tabIndex);
            });
        }

        // Show toast notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Initialize app
        document.addEventListener('DOMContentLoaded', function() {
            // Update demo countdown every minute
            updateDemoCountdown();
            setInterval(updateDemoCountdown, 60000);

            // Navigation click handlers
            document.querySelectorAll('.sidebar__nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const href = this.getAttribute('href');
                    const viewId = href.substring(1); // Remove #
                    showView(viewId);
                });
            });

            // Route tab click handlers
            document.querySelectorAll('.route-tab').forEach((tab, index) => {
                tab.addEventListener('click', () => switchRouteTab(index));
            });

            // Form interactions
            document.querySelectorAll('.btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    const btnText = this.textContent.trim();
                    
                    // Simulate various actions
                    if (btnText.includes('Calculate')) {
                        showToast('Mileage calculated successfully');
                    } else if (btnText.includes('Optimize')) {
                        showToast('Route optimized successfully');
                    } else if (btnText.includes('Save')) {
                        showToast('Settings saved successfully');
                    } else if (btnText.includes('Generate')) {
                        showToast('Summary generated successfully');
                    } else if (btnText.includes('Extract')) {
                        showToast('PDF data extracted successfully');
                    }
                });
            });

            // Drag and drop simulation for route stops
            document.querySelectorAll('.route-stop').forEach(stop => {
                stop.addEventListener('dragstart', function(e) {
                    e.dataTransfer.setData('text/plain', this.outerHTML);
                    this.style.opacity = '0.5';
                });

                stop.addEventListener('dragend', function(e) {
                    this.style.opacity = '1';
                });
            });

            // File upload drag and drop
            const dropZones = document.querySelectorAll('[style*="dashed"]');
            dropZones.forEach(zone => {
                zone.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    this.style.borderColor = 'var(--primary)';
                    this.style.backgroundColor = 'rgba(59,130,246,0.05)';
                });

                zone.addEventListener('dragleave', function(e) {
                    this.style.borderColor = 'var(--border)';
                    this.style.backgroundColor = 'transparent';
                });

                zone.addEventListener('drop', function(e) {
                    e.preventDefault();
                    this.style.borderColor = 'var(--border)';
                    this.style.backgroundColor = 'transparent';
                    showToast('File uploaded successfully');
                });
            });

            // Mobile menu toggle (for responsive)
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const sidebar = document.querySelector('.sidebar');
            
            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', function() {
                    sidebar.classList.toggle('open');
                });
            }

            // Keyboard navigation
            document.addEventListener('keydown', function(e) {
                // ESC to close modals/menus
                if (e.key === 'Escape') {
                    sidebar?.classList.remove('open');
                }
                
                // Alt + number keys for quick nav
                if (e.altKey && e.key >= '1' && e.key <= '9') {
                    const viewIds = ['dashboard', 'mileage', 'routes', 'jobs', 'autoforms', 'comps', 'firms', 'gear', 'help'];
                    const index = parseInt(e.key) - 1;
                    if (viewIds[index]) {
                        showView(viewIds[index]);
                    }
                }
            });

            // Simulate real-time updates for job sync
            setInterval(() => {
                const syncElements = document.querySelectorAll('.spinner').forEach(spinner => {
                    // Randomly complete some syncing jobs
                    if (Math.random() > 0.95) {
                        const parent = spinner.closest('.route-stop');
                        if (parent) {
                            spinner.remove();
                            const badge = parent.querySelector('.badge');
                            if (badge) {
                                badge.className = 'badge badge--success';
                                badge.textContent = 'Synced';
                            }
                        }
                    }
                });
            }, 2000);

            // Accessibility improvements
            document.querySelectorAll('.btn, .sidebar__nav-link, .route-tab').forEach(element => {
                element.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        this.click();
                    }
                });
            });
        });

        // Utility functions for future enhancements
        const ClaimCipher = {
            // Mileage calculation
            calculateMileage: function(start, end, rate, roundTrip = true) {
                // Would integrate with Google Distance Matrix API
                const baseMiles = Math.random() * 50 + 10; // Simulated
                const miles = roundTrip ? baseMiles * 2 : baseMiles;
                return {
                    miles: Math.round(miles * 10) / 10,
                    cost: Math.round(miles * rate * 100) / 100
                };
            },

            // Route optimization
            optimizeRoute: function(stops, maxRadius = 50, maxStopsPerDay = 10) {
                // Would implement clustering algorithm
                return {
                    days: Math.ceil(stops.length / maxStopsPerDay),
                    totalMiles: stops.length * 15, // Simulated
                    clusters: []
                };
            },

            // PDF processing
            extractPDFData: function(file) {
                // Would use PyPDF2/pikepdf on backend
